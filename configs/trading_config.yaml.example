# Per-Symbol Trading Configuration (Issue #18)
# This file demonstrates hierarchical configuration with per-symbol overrides.
# Copy to trading_config.yaml and customize as needed.

trading:
  # Global defaults - applied to all symbols unless overridden
  defaults:
    leverage: 1
    max_risk_per_trade: 0.01
    margin_type: ISOLATED
    backfill_limit: 200
    strategy: ict_strategy
    intervals:
      - 5m
      - 1h
      - 4h

  # Per-symbol configuration
  symbols:
    # Bitcoin - Conservative settings
    BTCUSDT:
      strategy: ict_strategy
      enabled: true
      leverage: 2
      max_risk_per_trade: 0.01
      ict_config:
        active_profile: strict
        ltf_interval: 5m
        mtf_interval: 1h
        htf_interval: 4h
        use_killzones: true
        displacement_ratio: 1.5
        fvg_min_gap_percent: 0.001

    # Ethereum - Balanced settings
    ETHUSDT:
      strategy: ict_strategy
      enabled: true
      leverage: 3
      max_risk_per_trade: 0.015
      ict_config:
        active_profile: balanced
        ltf_interval: 1m
        mtf_interval: 5m
        htf_interval: 15m
        use_killzones: true
        displacement_ratio: 1.3

    # Solana - More aggressive (higher volatility coin)
    SOLUSDT:
      strategy: ict_strategy
      enabled: true
      leverage: 5
      max_risk_per_trade: 0.02
      ict_config:
        active_profile: relaxed
        ltf_interval: 1m
        mtf_interval: 5m
        htf_interval: 15m
        use_killzones: false  # Trade outside killzones for altcoins

    # Example: Disabled symbol
    XRPUSDT:
      strategy: ict_strategy
      enabled: false  # Will not be traded
      leverage: 1

    # Example: Different strategy type (momentum)
    # DOGEUSDT:
    #   strategy: momentum_strategy
    #   enabled: true
    #   leverage: 3
    #   momentum_config:
    #     fast_period: 12
    #     slow_period: 26
    #     signal_period: 9
